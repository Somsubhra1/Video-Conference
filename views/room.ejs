<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.1/css/bootstrap.min.css"
      integrity="sha384-VCmXjywReHh4PwowAiWNagnWcLhlEJLA5buUprzK8rxFgeH0kww/aWY76TfkUoSX"
      crossorigin="anonymous"
    />

    <!-- FontAwesome JS -->
    <script
      src="https://kit.fontawesome.com/b767bbfe51.js"
      crossorigin="anonymous"
    ></script>

    <link rel="stylesheet" href="css/room.css" />

    <title>Conference Room</title>

    <!-- Setting Room ID/PORT -->
    <script>
      const ROOM_ID = "<%= roomId %>";
      const PORT = "<%= port %>";
    </script>

    <!-- Peer JS -->
    <script
      src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"
      defer
    ></script>

    <!-- Socket IO -->
    <script src="/socket.io/socket.io.js" defer></script>

    <!-- JQuery -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
      integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg=="
      crossorigin="anonymous"
    ></script>

    <!-- Popper JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
      integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
      crossorigin="anonymous"
    ></script>

    <!-- Bootstrap js -->
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
      integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
      crossorigin="anonymous"
    ></script>

    <!-- Conference room script -->
    <script src="js/script.js" defer></script>
  </head>

  <body>
    <!-- Username Modal -->
    <div
      class="modal fade"
      id="usernameInputModal"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
              Add your nickname
            </h5>
          </div>
          <div class="modal-body">
            <div class="row d-flex justify-content-center">
              <div class="col-7">
                <input
                  type="text"
                  class="form-control"
                  id="usernameInput"
                  placeholder="Enter nickname"
                  required
                />
              </div>
              <div class="col-5">
                <button
                  type="button"
                  id="usernameSubmitBtn"
                  class="btn btn-primary d-inline"
                >
                  Confirm
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Video Modal -->
    <div
      class="modal fade"
      id="videoModal"
      role="dialog"
      aria-labelledby="videoModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-body">
            <video id="fullScreenVideo"></video>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Chat pop Modal -->
    <div
      class="modal fade"
      id="chatModal"
      role="dialog"
      aria-labelledby="chatModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="chatModalLabel">
              Chat
            </h5>
            <div class="main__participants_list"></div>
          </div>
          <div class="modal-body chat_container" id="chat_modal_body">
            <ul class="messages"></ul>
          </div>
          <div class="main__message_container">
            <input
              id="chat_message_modal"
              type="text"
              placeholder="Type message here..."
              autocomplete="off"
              autofocus="on"
            />
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#chatModal"
    >
      Launch demo CHAT modal
    </button> -->

    <!-- main -->
    <div class="main">
      <div class="main__left col-md-9 p-0">
        <div class="main__videos">
          <div id="video-grid"></div>
        </div>
        <div
          class="main__controls px-0 justify-content-between d-none d-sm-flex"
        >
          <div
            class="main__controls__block col-2 px-0 mx-0 justify-content-start"
          >
            <div
              class="main__controls__button main__copyInfo_button"
              onclick="copyInfo()"
              data-toggle="tooltip"
              data-placement="top"
              title="Copy meeting link"
            >
              <i class="far fa-clone"></i>
              <!-- <span>Copy Meeting Info</span> -->
            </div>
          </div>
          <div
            class="main__controls__block main__mid_controls col-8 col-sm-6 justify-content-sm-center justify-content-start"
          >
            <div
              class="main__controls__block col-3 px-md-0 mx-md-0 justify-content-center"
            >
              <div
                onclick="muteUnmute()"
                class="main__controls__button main__mute_button"
                data-toggle="tooltip"
                data-placement="top"
                title="Mute Yourself"
              >
                <i
                  class="fas fa-microphone"
                  style="padding-left: 6px; padding-right: 6px;"
                ></i>
              </div>
            </div>
            <div
              class="main__controls__block col-3 px-md-0 mx-md-0 justify-content-center"
            >
              <div
                class="main__controls__button main__exit_button"
                onclick="exit()"
                data-toggle="tooltip"
                data-placement="top"
                title="Leave meeting"
                style="padding: 23px;"
              >
                <i class="fas fa-phone"></i>
              </div>
            </div>
            <div
              class="main__controls__block col-3 px-md-0 mx-md-0 justify-content-center"
            >
              <div
                class="main__controls__button main__video_button"
                onclick="playStop()"
                data-toggle="tooltip"
                data-placement="top"
                title="Turn off your video"
                style="padding: 23px;"
              >
                <i class="fas fa-video"></i>
              </div>
            </div>
          </div>
          <div
            class="main__controls__block col-2 px-0 mx-0 justify-content-end"
          >
            <div
              class="main__controls__button main__chat_button"
              onclick="shareScreen()"
              data-toggle="tooltip"
              data-placement="top"
              title="Share your screen"
            >
              <i class="fas fa-desktop"></i>
            </div>
            <div
              class="main__controls__button main__chatPop_button d-flex d-md-none"
              onclick="chatPop()"
              data-toggle="tooltip"
              data-placement="top"
              title="Open Chat"
            >
              <i class="far fa-comments"></i>
              <!-- <span>Open chat</span> -->
            </div>
          </div>
        </div>
      </div>
      <div class="main__right d-none d-md-flex col-md-3 p-0">
        <div class="main__header">
          <h4>Chat</h4>
          <div class="main__participants_list"></div>
        </div>
        <div class="main__chat_window chat_container">
          <ul class="messages"></ul>
        </div>
        <div class="main__message_container">
          <input
            id="chat_message"
            type="text"
            placeholder="Type message here..."
            autocomplete="off"
            autofocus="on"
          />
        </div>
      </div>
    </div>

    <!-- nav -->
    <nav class="float-nav closed d-sm-none">
      <ul>
        <li class="nav__media_controls" onclick="offOverlay()">
          <div
            class="main__controls__block px-md-0 mx-md-0 justify-content-center"
          >
            <div
              onclick="muteUnmute(); offOverlay();"
              class="main__controls__button main__mute_button"
            >
              <i
                class="fas fa-microphone"
                style="padding-left: 6px; padding-right: 6px;"
              ></i>
            </div>
          </div>
          <div
            class="main__controls__block px-md-0 mx-md-0 justify-content-center"
          >
            <div
              class="main__controls__button main__exit_button"
              onclick="exit(); offOverlay();"
              style="padding: 23px;"
            >
              <i class="fas fa-phone"></i>
            </div>
          </div>
          <div
            class="main__controls__block px-md-0 mx-md-0 justify-content-center"
          >
            <div
              class="main__controls__button main__video_button"
              onclick="playStop(); offOverlay();"
              style="padding: 23px;"
            >
              <i class="fas fa-video"></i>
            </div>
          </div>
        </li>
        <li class="nav__share_chat_controls">
          <div
            class="main__controls__button main__copyInfo_button"
            onclick="copyInfo(); offOverlay();"
          >
            <i class="far fa-clone"></i>
            <!-- <span>Copy Meeting Info</span> -->
          </div>
          <div
            class="main__controls__button main__chatPop_button"
            onclick="chatPop(); offOverlay();"
          >
            <i class="far fa-comments"></i>
            <!-- <span>Open chat</span> -->
          </div>
        </li>
      </ul>
      <a class="toggle" href="#">+</a>
    </nav>

    <div id="overlay"></div>

    <script>
      $(function () {
        $('[data-toggle="tooltip"]').tooltip();
      });
    </script>
  </body>
</html>
